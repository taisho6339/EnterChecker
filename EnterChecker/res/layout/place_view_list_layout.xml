    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_gravity="center_horizontal"
        android:id="@+id/place_list_place_name"
        style="@style/default_view_style" />

    <TextView
        android:layout_gravity="center_horizontal"
        android:id="@+id/place_list_place_address"
        style="@style/default_view_style" />

    <TextView
        android:layout_gravity="center_horizontal"
        android:id="@+id/place_list_place_radius"
        style="@style/default_view_style" />

</LinearLayout>